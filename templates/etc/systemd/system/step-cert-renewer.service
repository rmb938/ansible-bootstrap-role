[Unit]
Description=Certificate renewer for %I
After=network-online.target

[Service]
Type=oneshot
User=root

ExecCondition=/usr/local/bin/step-check-cert-renewal
ExecStart=/usr/local/bin/step-renew-step-certs

# ExecStartPost=/usr/bin/env sh -c "! systemctl --quiet is-active ${SERVICE}.service || systemctl try-reload-or-restart ${SERVICE}"

[Install]
WantedBy=multi-user.target
